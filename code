using System;
using System.Collections.Generic;
using System.Linq;
using System.Runtime.InteropServices;
using System.Text;
using System.Threading.Tasks;
using System.Web;
using static System.Net.WebRequestMethods;

namespace jun1
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string password = "";
            string passwordCheck;
            string setName = "1";
            string name = "";
            string setPassword = "2";
            string showInformation = "3";
            string esc = "4";
            string command;
            bool isWorking = true;

            Console.WriteLine("Привет! Я твой помощник и у меня есть список команд которые я могу выполнять!");

            while (isWorking)
            {
                Console.WriteLine("Установить имя - " + setName);
                Console.WriteLine("Установить пароль - " + setPassword);
                Console.WriteLine("Показать имя - " + showInformation);
                Console.WriteLine("выйти - " + esc);
                Console.WriteLine("Чего изволите?");
                
                command = Console.ReadLine();

                if (command == esc)
                {
                    Console.WriteLine("До свидания!");
                    isWorking = false;
                    return;
                }
                else if (command == setName)
                {
                    Console.WriteLine("Введите имя");
                    name = Console.ReadLine();
                    Console.WriteLine("Имя успешно сохранено");
                }
                else if (command == setPassword)
                {
                    Console.WriteLine("Введите желаемый пароль");
                    password = Console.ReadLine();
                    Console.WriteLine("Пароль установлен");
                }
                else if (command == showInformation)
                {
                    Console.WriteLine("Введите пароль");
                    passwordCheck = Console.ReadLine();
                    if (passwordCheck == password)
                    {
                        Console.WriteLine("Имя - " + name);
                    }
                    else
                    {
                        Console.WriteLine("Пароль неверный");
                    }
                }
                else
                {
                    Console.WriteLine("Я не знаю такой команды:(");
                }
            }
        }
    }
}
